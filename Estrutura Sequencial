import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
Scanner leia = new Scanner(System.in);
 double dolar, real, resul;
 System.out.println("Escreva o valor do dólar: ");
 dolar = leia.nextDouble();
 System.out.println("Qual é a cotação do real? ");
 real = leia.nextDouble();
 resul = dolar*real;
 System.out.println("Você tem " + resul + " reais.");
 }
}
/*Exercício 4*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner ( System.in);
 
 double diagonalmaior, diagonalmenor, area;
 
 System.out.println("Digite o valor da diagonal maior: ");
 diagonalmaior = leia.nextDouble();
 System.out.println("Digite o valor da diagonal menor:");
 diagonalmenor = leia.nextDouble();
 area = (diagonalmaior*diagonalmenor)/2;
 System.out.println("Área é igual a: " +area);
 }
}
/*Exercício 5*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 
 double c, fahrenheit;
 
 System.out.println("Digite a temperatura em Celsius: ");
 c = leia.nextDouble();
 fahrenheit = (c*1.8) + 32;
 System.out.println("Essa temperatura em Fahrenheit é: " + fahrenheit);
 }
}
/*Exercício 6*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 double a, b, c, delta, x1, x2;
 
 System.out.println("Dê o valor de A: ");
 a = leia.nextDouble();
 System.out.println("Dê o valor de B: ");
 b = leia.nextDouble();
 System.out.println("Dê o valor de C: ");
 c = leia.nextDouble();
 
 delta = b*b-4*a*c;
 
 if(delta>=0){
 x1 = (b + Math.sqrt(delta))/(2*a);
 x2 = (b - Math.sqrt(delta))/(2*a);
 
 System.out.println("x1 = " + x1);
 System.out.println("x2 = " + x2);
 }
 else 
 System.out.println("Não é possível calcular! Delta menor ou igual a zero.");
 }
}
/*Exercício 7*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 
 float sm, sf, resul;
 
 System.out.println("Quanto é o salário mínimo: ");
 sm = leia.nextFloat();
 System.out.println("Qual o salário do funcionário: ");
 sf = leia.nextFloat();
 resul = sf/sm;
 System.out.println("Ele recebe " + resul + " salários mínimos.");
}
}
