/*Exercício 1*/
import java.util.Scanner;
public class Main {
 public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 double n1, n2, n3, resul;
 System.out.println("Declare o número 1:");
 n1 = leia.nextDouble();
 System.out.println("Declare o número 2:");
 n2 = leia.nextDouble();
 System.out.println("Declare o número 3:");
 n3 = leia.nextDouble();
 resul = n1*n2*n3/3;
 System.out.println("A média é : " + resul);
 }
}
/*Exercício 2*/
import java.util.Scanner;
public class Main {
 public static void main(String[] args) {
Scanner leia = new Scanner(System.in);
 int anoAtual, anoNascimento, idade, idade2050;
 
 System.out.println("Digite seu ano de nascimento: ");
 anoNascimento = leia.nextInt();
 System.out.println("Digite o ano atual: ");
 anoAtual = leia.nextInt();
 
 idade = anoAtual-anoNascimento;
 idade2050 = 2050-anoNascimento;
 System.out.println("Sua idade no ano atual: " +idade);
 System.out.println("Sua idade no ano de 2050 será: " +idade2050);
 }
}
