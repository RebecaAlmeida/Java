import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
Scanner leia = new Scanner(System.in);
 int m,m1,m2,m3,m4,m5,m6,m7,m8,m9,m10;
 
 System.out.print("Digite o número a ser multiplicado: ");
 m = leia.nextInt();
 m1 = m*1;
 m2 = m*2;
 m3 = m*3;
 m4 = m*4;
 m5 = m*5;
 m6 = m*6;
 m7 = m*7;
 m8 = m*8;
 m9 = m*9;
 m10 = m*10;
 
 System.out.println("Multiplicado por 1 : " +m1);
 System.out.println("Multiplicado por 2 : " +m2);
 System.out.println("Multiplicado por 3 : " +m3);
 System.out.println("Multiplicado por 4 : " +m4);
 System.out.println("Multiplicado por 5 : " +m5);
 System.out.println("Multiplicado por 6 : " +m6);
 System.out.println("Multiplicado por 7 : " +m7);
 System.out.println("Multiplicado por 8 : " +m8);
 System.out.println("Multiplicado por 9 : " +m9);
 System.out.println("Multiplicado por 10 : " +m10);
}
}
/*Exercício 9*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 
 double n, resul1, resul2, resul3, resul4, rz1, rz2;
 
 System.out.print("Declare um número positivo: ");
 n = leia.nextDouble();
 resul1 = n*n;
 resul2= n*n*n;
 resul3 = Math.sqrt(n);
 resul4 = Math.cbrt(n);
 
 System.out.println("Seu número ao quadrado : " + resul1);
 System.out.println("Seu número ao cubo : " + resul2);
 System.out.println("Sua raiz quadrada : " + resul3);
 System.out.println("Sua raiz : " + resul4);
}
}
/*Exercício 10*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 int valor, porcentagem, resul;
 
 System.out.print("Declare o valor gasto do cliente: ");
 valor = leia.nextInt();
 System.out.print("Declare a porcentagem de gorjeta: ");
 porcentagem = leia.nextInt();
 resul= (porcentagem*valor)/100;
 System.out.print("O valor da gorjeta é de " + resul + " reais.");
}
}
/*Exercício 11*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 
 int numero, antecessor, sucessor, dobro, metade;
 
 System.out.print("Declare o número inteiro : ");
 numero = leia.nextInt();
 antecessor = numero-1;
 System.out.println("O antecessor é : " + antecessor);
 sucessor = numero+1;
 System.out.println("O seu sucessor é : " + sucessor);
 dobro = numero*2;
 System.out.println("O seu dobro é : " + dobro);
 metade = numero/2;
 System.out.println("A sua metade é : " + metade);
}
}
