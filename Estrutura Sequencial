/*Exercício 15*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 int candidato1, candidato2, eleitores, votos2, votosn, percentual, percentual2, percentual3;
 
 System.out.print("Declare o número de eleitores: ");
 eleitores = leia.nextInt();
 System.out.print("Declare os votos no 1° candidato: ");
 candidato1 = leia.nextInt();
 System.out.print("Declare os votos no 2° candidato: ");
 candidato2 = leia.nextInt();
 votosn = eleitores-candidato1-candidato2;
 System.out.println("O total de votos nulos são: " + votosn);
 percentual = candidato1*100/eleitores;
 System.out.println("A porcentagem de votos no 1° candidato é de: " + percentual + "%");
 percentual2 = candidato2*100/eleitores;
 System.out.println("A porcentagem de votos do 2° candidato é de: " + percentual2 + "%");
 percentual3 = votosn*100/eleitores;
 System.out.println("A porcentagem de votos nulos é de: " + percentual3 + "%");
}
}
