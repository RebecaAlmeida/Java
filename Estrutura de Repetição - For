/*Exercício 1*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
Scanner leia = new Scanner (System.in);
int num = 0,dobro = 0,dobro1;
 for(int i=1; i<=5;i= i++){
 System.out.print("Digite o " +(i++)+ " valor: ");
 num= leia.nextInt();
 System.out.println("O seu dobro é: "+num*2);
 }
}
}
