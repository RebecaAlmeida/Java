/*Exercício 1*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 int num1, num2;
 System.out.print("Digite o primeiro número: ");
 num1 = leia.nextInt();
 System.out.print("Digite o segundo número: ");
 num2 = leia.nextInt();
 if(num1>num2){
 System.out.println("O número " + num1 + " é maior que número " + num2);
 }
 else if(num2>num1){
 System.out.println("O número " + num2 + " é maior que número "+ num1);
 }
 else
 System.out.println("Os números são iguais!");
 }
}
/*Exercício 2*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
int nota1, nota2, media;
 System.out.print("Digite a primeira nota: ");
 nota1=leia.nextInt();
 System.out.print("Digite a segunda nota: ");
 nota2 = leia.nextInt();
 media = nota1 + nota2/2;
 if(media>=7){
 System.out.println("APROVADO!");
 }
 else 
 System.out.println("REPROVADO!");
}
}
/*Exercício 3*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 
int nota1, nota2, nota3, media;
 System.out.println("Digite a primeira nota do aluno: ");
 nota1=leia.nextInt();
 System.out.println("Digite a segunda nota do aluno: ");
 nota2=leia.nextInt();
 System.out.println("Digite a terceira nota do aluno; ");
 nota3=leia.nextInt();
 media= nota1+nota2+nota3/3;
 if(media>=0 && media<=3){
 System.out.println("REPROVADO");
 }
 else if (media>=3 && media<7){
 System.out.println("EXAME!");
 }
 else
 System.out.println("APROVADO!");
 
}
}
/*Exercício 4*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 
 Scanner leia = new Scanner(System.in);
int x,y,z;
 System.out.println("Digite três valores: ");
 x = leia.nextInt();
 y = leia.nextInt();
 z = leia.nextInt();
 if ((y+z>x) && (x+z>y) && (x+y>z) ){
 System.out.println("Forma o");
 if ((x==y) && (y==z))
 System.out.println("Triângulo Equilátero");
 else if ((x==y) || (y==z) || (z==x))
 System.out.println("Triângulo Isosceles");
 else 
 System.out.println("Triâgulo Escaleno");
 }
 else {
 System.out.println("Não forma um triângulo");
 }
 }
 } 
/*Exercício 5*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner(System.in);
 
 int sexo;
 double altura , pesoI;
 
 System.out.println("Escolha o sexo da pessoa: (1) - Mulher, (2) - Homem: ");
 sexo=leia.nextInt();
 System.out.println("Digite a altura da pessoa: ");
 altura= leia.nextDouble();
 if (sexo==1){
 pesoI = 62.1*altura-44.7;
 System.out.println("O peso ideal para essa mulher é: "+pesoI);
 }
 else if (sexo==2){
 pesoI= 72.7*altura-58;
 System.out.println("O peso ideal para esse homem é: "+pesoI);
 }
 }
}
/*Exercício 6*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 
 Scanner leia = new Scanner(System.in);
 double peso,altura,imc;
 System.out.println("Digite o seu peso: ");
 peso = leia.nextDouble();
 System.out.println("Digite a sua altura: ");
 altura = leia.nextDouble();
 imc = peso/altura*2;
 if(peso<=0 || altura<=0){
 System.out.println("Valor inválido! Digite um valor positivo.");
 }
 else if(imc<20){
 System.out.println("Abaixo do peso");
 }
 else if(imc>=20 && imc<=25){
 System.out.println("Peso normal");
 }
 else if (imc>=25 && imc<=30){
 System.out.println("Sobre peso");
 }
 else if (imc>=30 && imc<=40){
 System.out.println("Obeso");
 }
 else if (imc>=40 && imc<=40){
 System.out.println("Peso morbido");
 }
}
}
/*Exercício 7*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner (System.in);
 
 int salario, percentual=30, aumento, salarionovo;
 System.out.print("Digite o seu salário: ");
 salario=leia.nextInt();
 if(salario<=1000){
 aumento = (salario*30)/100;
 salarionovo= salario+aumento;
 System.out.println("Seu salário novo com aumento de 30% será de: "+salarionovo);
 }
 else
 System.out.println("Sem aumento!");
}
}
/*Exercício 8*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner (System.in);
 
 int idade;
 System.out.print("Digite sua idade:");
 idade=leia.nextInt();
 if(idade<=7){
 System.out.println("Categoria INFANTIL!");
 }
 else if(idade<=0){
 System.out.println("Valor inválido! Digite um valor positivo.");
 }
 else if(idade>=8 && idade<=10){
 System.out.println("Categoria JUVENIL");
 }
 else if(idade>=11 && idade<=15){
 System.out.println("Categoria ADOLESCENTE");
 }
 else if(idade>=16 && idade<=30){
 System.out.println("Categoria ADULTO");
 }
 else
 System.out.println("Categoria SENIOR");
}
}
/*Exercício 9*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner (System.in);
 
 int idade;
 System.out.print("Digite a sua idade:");
 idade=leia.nextInt();
 if(idade<16){
 System.out.println("Não é eleitor!");
 }
 else if(idade>16 && idade<65){
 System.out.println("Eleitor obrigatório!");
 }
 else 
 System.out.println("Eleitor facultativo!");
}
}
/*Exercício 10*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner (System.in);
 
 int num;
 System.out.println("Digite um número entre 1 e 7:");
 num=leia.nextInt();
 switch (num) {
 case 1:
 System.out.println("Domingo");
 break;
 case 2:
 System.out.println("Segunda-feira");
 break;
 case 3:
 System.out.println("Terça-feira");
 break;
 case 4:
 System.out.println("Quarta-feira");
 break;
 case 5:
 System.out.println("Quinta-feira");
 break;
 case 6:
 System.out.println("Sexta-feira");
 break;
 case 7:
 System.out.println("Sábado");
 break;
 default:
 System.out.println("Valor inválido");
 break;
 }
}
}
/*Exercício 11*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner (System.in);
 
 int num;
 System.out.println("Digite um número entre 1 e 12: ");
 num=leia.nextInt();
 switch (num) {
 case 1:
 System.out.println("JANEIRO");
 break;
 case 2:
 System.out.println("FEVEREIRO");
 break;
 case 3:
 System.out.println("MARÇO");
 break;
 case 4:
 System.out.println("ABRIL");
 break;
 case 5:
 System.out.println("MAIO");
 break;
 case 6:
 System.out.println("JUNHO");
 break;
 case 7:
 System.out.println("JULHO");
 break;
 case 8:
 System.out.println("AGOSTO");
 break;
 case 9:
 System.out.println("SETEMBRO");
 break;
 case 10:
 System.out.println("OUTUBRO");
 break;
 case 11:
 System.out.println("NOVEMBRO");
 break;
 case 12:
 System.out.println("DEZEMBRO");
 break;
 default:
 System.out.println("Inválido!");
 break;
 }
}
}
/*Exercício 12*/
import java.util.Scanner;
public class Main
{
public static void main(String[] args) {
 Scanner leia = new Scanner (System.in);
 
 int n1,n2,soma,div,sub,mult,escolha;
 System.out.println("Digite o primeiro número: ");
 n1 = leia.nextInt();
 System.out.println("Digite o segundo número: ");
 n2=leia.nextInt();
 System.out.println("Digite o número referente ao que quer fazer: ");
 System.out.println("1- SOMAR");
 System.out.println("2- DIVIDIR");
 System.out.println("3- SUBTRAIR");
 System.out.println("4- MULTIPLICAR");
 System.out.println("5- SAIR");
 escolha=leia.nextInt();
 if(escolha==1){
 soma = n1+n2;
 System.out.println("A soma é: " +soma);
 }
 
 else if (escolha==2){
 div= n1/n2;
 System.out.println("A divisão é:" +div);
 }
 
 else if(escolha==3){
 sub=n1-n2;
 System.out.println("A subtração é:" +sub);
 }
 else if(escolha==4){
 mult=n1*n2;
 System.out.println("A multiplicação é:" +mult);
 }
 
 else if(escolha==5)
 System.out.println("SAIR");
 }
}
